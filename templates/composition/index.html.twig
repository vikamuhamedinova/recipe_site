{% extends 'base.html.twig' %}

{% block title %}Composition index{% endblock %}

{% block body %}
    <h1>Composition index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for composition in compositions %}
            <tr>
                <td>{{ composition.amount }}</td>
                <td>
                    <a href="{{ path('composition_show', {'id': composition.id}) }}">show</a>
                    <a href="{{ path('composition_edit', {'id': composition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('composition_new') }}">Create new</a>
{% endblock %}
